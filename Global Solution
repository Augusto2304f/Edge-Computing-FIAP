Sensor de Ã¡gua 

// Pinos do sensor ultrassÃ´nico
const int trigPin = 9;
const int echoPin = 10;

// Pino do LED de alerta
const int alertaPin = 7;

// VariÃ¡veis para cÃ¡lculos
long duracao;
float distancia;
float nivelMaximo = 30.0; // DistÃ¢ncia mÃ­nima (em cm) para considerar risco de enchente

void setup() {
  Serial.begin(9600);
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(alertaPin, OUTPUT);
  
  Serial.println("HydroGuard Solutions - Monitoramento de NÃ­vel de Ãgua Iniciado");
}

void loop() {
  // Envia pulso para o sensor
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  
  // Recebe sinal de volta
  duracao = pulseIn(echoPin, HIGH);
  
  // Calcula a distÃ¢ncia (em cm)
  distancia = duracao * 0.0343 / 2;

  // Exibe a distÃ¢ncia no monitor serial
  Serial.print("Distancia medida: ");
  Serial.print(distancia);
  Serial.println(" cm");

  // Verifica o nÃ­vel da Ã¡gua
  if (distancia > nivelMaximo) {
    Serial.println("ğŸš¨ ALERTA: NÃ­vel de Ã¡gua elevado! RISCO DE ENCHENTE!");
    digitalWrite(alertaPin, HIGH); // Aciona buzzer ou LED
  } else {
    digitalWrite(alertaPin, LOW); // Desliga alerta
  }

  delay(1000); // Faz a leitura a cada 1 segundo
}




