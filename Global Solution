Sensor de √°gua 

// Pinos do sensor ultrass√¥nico
const int trigPin = 9;
const int echoPin = 10;

// Pino do LED de alerta
const int alertaPin = 7;

// Vari√°veis para c√°lculos
long duracao;
float distancia;
float nivelMaximo = 30.0; // Dist√¢ncia m√≠nima (em cm) para considerar risco de enchente

void setup() {
  Serial.begin(9600);
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(alertaPin, OUTPUT);

  Serial.println("HydroGuard Solutions - Monitoramento de N√≠vel de √Ågua Iniciado");
}

void loop() {
  // Envia pulso para o sensor
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);

  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  // Recebe sinal de volta
  duracao = pulseIn(echoPin, HIGH);

  // Calcula a dist√¢ncia (em cm)
  distancia = duracao * 0.0343 / 2;

  // Exibe a dist√¢ncia no monitor serial
  Serial.print("Distancia medida: ");
  Serial.print(distancia);
  Serial.println(" cm");

  // Verifica o n√≠vel da √°gua
  if (distancia < nivelMaximo) {
    Serial.println("üö® ALERTA: N√≠vel de √°gua elevado! RISCO DE ENCHENTE!");
    digitalWrite(alertaPin, HIGH); // Acende LED
  } else {
    digitalWrite(alertaPin, LOW); // Desliga LED
  }

  delay(1000); // Faz a leitura a cada 1 segundo
}




